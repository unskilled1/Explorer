        <sys:String>ReverseSelectButton</sys:String>
        <sys:String>ArrowLeftButton</sys:String>
        <sys:String>ArrowRightButton</sys:String>
      </ItemsControl>
    </StackPanel>
  </Design.PreviewWith>
